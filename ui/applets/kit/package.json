{
  "name": "@left-curve/applets-kit",
  "version": "0.1.0",
  "scripts": {
    "ci": "pnpm lint",
    "lint": "pnpm biome check --write ./src",
    "lint:fix": "pnpm biome ci ./src",
    "clean": "rm -rf ./build && rm -rf node_modules && rm -rf tsconfig.tsbuildinfo",
    "clean:build": "rm -rf ./build",
    "sb:dev": "storybook dev -p 6006",
    "sb:build": "storybook build",
    "pre-dev": "tsc",
    "dev": "tsc -w",
    "build": "pnpm tsup --clean"
  },
  "main": "./build/index.cjs",
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "typings": "./build/index.d.ts",
  "sideEffects": false,
  "files": [
    "build",
    "src",
    "!**/*.spec.ts",
    "!typedoc.json",
    "!tsup.config.ts"
  ],
  "imports": {
    "#hooks/*": "./src/hooks/*",
    "#utils/*": "./src/utils/*"
  },
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js",
      "default": "./build/index.cjs"
    },
    "./components": {
      "types": "./build/components/index.d.ts",
      "import": "./build/components/index.js",
      "default": "./build/components/index.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "components": [
        "./build/components/index.d.ts"
      ]
    }
  },
  "dependencies": {
    "@headlessui/react": "^2.1.10",
    "@left-curve/dango": "workspace:^",
    "@left-curve/store": "workspace:^",
    "@left-curve/ui-config": "workspace:^",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "framer-motion": "catalog:",
    "qr-code-styling": "^1.7.2",
    "react-use": "^17.5.1",
    "tailwind-scrollbar": "^3.1.0",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "catalog:",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@left-curve/config": "workspace:^",
    "@storybook/addon-a11y": "^8.3.2",
    "@storybook/addon-essentials": "^8.3.2",
    "@storybook/addon-links": "^8.3.2",
    "@storybook/blocks": "^8.3.2",
    "@storybook/react": "^8.3.2",
    "@storybook/react-vite": "^8.3.2",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "autoprefixer": "catalog:",
    "postcss": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "storybook": "^8.3.2",
    "tailwindcss": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "catalog:"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5.0.0",
    "@tanstack/react-table": ">=8.0.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7"
  }
}
