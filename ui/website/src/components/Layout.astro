---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "@dango/assets/fonts/ABCDiatypeRounded/index.css";
import "@dango/assets/fonts/Exposure/index.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="flex flex-col min-h-screen w-full h-full bg-white relative scrollbar-none items-center justify-center"
  >
    <slot />
  </body>
</html>

<style is:global>
  body {
    font-family: "ABCDiatypeRounded";
  }

  .header {
    width: 200%;
    mask-position: bottom center;
    mask-repeat: no-repeat;
    background: linear-gradient(134deg, #c4b7ba 0%, #fff2e2 76.05%);
    mask-size: 115%;
    mask-image: url("/images/header-mask.svg");
    mask-mode: alpha;
  }

  @media screen and (min-width: 768px) {
    .header {
      width: 100%;
    }
  }

  .scale {
    opacity: 0;
    transform: scale(0) translateY(500px);
    animation: scale-up 0.8s ease forwards;
  }
  .delay-2 {
    animation-delay: 0.2s;
  }
  .delay-3 {
    animation-delay: 0.3s;
  }
  .delay-4 {
    animation-delay: 0.4s;
  }
  .delay-5 {
    animation-delay: 0.5s;
  }
  .delay-6 {
    animation-delay: 0.6s;
  }
  .monkey {
    animation: levitate 3s ease-in-out infinite;
    animation-delay: 2.125s;
  }
  .snake {
    animation: levitate 3s ease-in-out infinite;
    animation-delay: 1.25s;
  }
  .rabbit {
    animation: levitate 3s ease-in-out infinite;
    animation-delay: 2.5s;
  }
  .dog {
    animation: levitate 3s ease-in-out infinite;
    animation-delay: 1.75s;
  }
  .dancer {
    animation: levitate 3s ease-in-out infinite;
    animation-delay: 0.125ms;
  }

  @keyframes levitate {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  @keyframes scale-up {
    0% {
      transform: scale(0) translateY(500px);
      opacity: 0;
    }
    100% {
      opacity: 1;
      transform: scale(1) translateY(0px);
    }
  }
</style>
