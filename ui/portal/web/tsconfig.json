{
  "extends": ["@left-curve/config/ts/react.json"],
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"],
      "~/paraglide/*": ["./.paraglide/*"],
      "~/constants": ["./constants.config.ts"],
      "~/store": ["./store.config.dev.ts"]
    },
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "env.d.ts",
    ".paraglide/**/*.js",
    "../../config/tailwind/config.ts"
  ],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../../applets/kit"
    },
    {
      "path": "../../../sdk/dango"
    },
    {
      "path": "../../store"
    }
  ]
}
