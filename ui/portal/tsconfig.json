{
  "extends": [
    "@leftcurve/config/ts/react.json"
  ],
  "compilerOptions": {
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "next.config.mjs"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../shared"
    },
    {
      "path": "../../sdk/packages/types"
    },
    {
      "path": "../../sdk/packages/connect-kit"
    },
    {
      "path": "../../sdk/packages/crypto"
    },
    {
      "path": "../../sdk/packages/utils"
    },
    {
      "path": "../../sdk/packages/core"
    },
    {
      "path": "../../sdk/packages/react"
    }
  ]
}
