{
  "name": "leftcurve-monorepo",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "pnpm": ">=9.0.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "turbo": "turbo",
    "doc": "typedoc",
    "clean": "turbo clean",
    "clean:build": "turbo clean:build",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "lint:pkg": "turbo lint -F=./sdk/**",
    "test": "turbo test",
    "test:pkg": "turbo test -F=./sdk/**",
    "dev": "turbo dev",
    "dev:pkg": "turbo dev -F=./sdk/**",
"dev:portal-web": "turbo dev -F=./sdk/** -F @left-curve/applets-kit -F @left-curve/portal-web --concurrency=11",
    "dev:website": "turbo dev -F @left-curve/dango-website",
    "build:pkg": "turbo build -F=./sdk/**",
    "build:graph": "turbo build --graph=build-graph.png",
    "build:portal-web": "turbo build -F @left-curve/portal-web",
    "build:website": "pnpm -F @left-curve/dango-website build:cf",
    "example:vite": "pnpm -F example-vite",
    "example:next": "pnpm -F example-nextjs",
    "example:node": "pnpm -F example-nodejs",
    "base": "pnpm -F config",
    "dango": "pnpm -F dango",
    "sdk": "pnpm -F sdk",
    "types": "pnpm -F types",
    "bump": "pnpm -r 'bump'"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@biomejs/biome": "^1.8.3",
    "tsup": "^8.3.0",
    "turbo": "^2.0.11",
    "typedoc": "^0.26.5",
    "typescript": "catalog:"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "typescript",
        "tsup",
        "@biomejs/biome"
      ]
    }
  }
}
