{
  "name": "leftcurve-monorepo",
  "version": "0.1.0",
  "author": "left-curve software",
  "scripts": {
    "turbo": "turbo",
    "doc": "typedoc",
    "clean": "turbo clean",
    "clean:build": "turbo clean:build",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "lint:pkg": "turbo lint -F=./sdk/packages/**",
    "test": "turbo test",
    "test:pkg": "turbo test -F=./sdk/packages/**",
    "dev": "turbo dev",
    "dev:pkg": "turbo dev -F=./sdk/packages/**",
    "dev:portal": "turbo dev -F=./sdk/packages/** -F @dango/shared -F @dango/portal",
    "dev:landing": "turbo dev -F=./sdk/packages/** -F @dango/shared -F @dango/landing",
    "build:pkg": "turbo build -F=./sdk/packages/**",
    "build:graph": "turbo build --graph=build-graph.png",
    "build:portal": "turbo build -F=./sdk/packages/** -F @dango/shared -F @dango/portal",
    "build:landing": "turbo build -F=./sdk/packages/** -F @dango/shared && pnpm landing build:cf",
    "example:vite": "pnpm -F example-vite",
    "example:next": "pnpm -F example-nextjs",
    "example:node": "pnpm -F example-nodejs",
    "base": "pnpm -F config",
    "kit": "pnpm -F connect-kit",
    "crypto": "pnpm -F crypto",
    "encoding": "pnpm -F encoding",
    "react": "pnpm -F react",
    "sdk": "pnpm -F sdk",
    "types": "pnpm -F types",
    "utils": "pnpm -F utils",
    "storybook": "pnpm shared sb:dev",
    "shared": "pnpm -F shared",
    "landing": "pnpm -F landing",
    "portal": "pnpm -F portal"
  },
  "engines": {
    "pnpm": ">=9.0.0",
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "tsup": "^8.3.0",
    "turbo": "^2.0.11",
    "typedoc": "^0.26.5",
    "typescript": "^5.6.2"
  },
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "typescript",
        "tsup",
        "@biomejs/biome"
      ]
    }
  }
}
