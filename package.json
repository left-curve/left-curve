{
  "name": "leftcurve-monorepo",
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "pnpm": ">=10.16.1",
    "node": ">=23.0.0"
  },
  "scripts": {
    "turbo": "turbo",
    "doc": "typedoc",
    "clean": "turbo clean",
    "clean:build": "turbo clean:build",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "lint:sdk": "turbo lint -F=./sdk/**",
    "test": "turbo test",
    "test:sdk": "turbo test -F=./sdk/**",
    "dev": "turbo dev",
    "machine-translate": "pnpm -F ui-config machine-translate",
    "dev:sdk": "turbo dev -F=./sdk/**",
    "dev:applets": "turbo dev -F=./ui/applets/**",
    "dev:portal-web": "turbo dev -F=./sdk/** -F=./ui/store -F=./ui/foundation -F @left-curve/applets-kit -F @left-curve/portal-web",
    "dev:portal-app": "turbo dev -F=./sdk/** -F=./ui/store -F=./ui/foundation -F @left-curve/portal-app",
    "build:sdk": "turbo build -F=./sdk/**",
    "build:graph": "turbo build --graph=build-graph.png",
    "build:portal-web": "turbo build -F @left-curve/portal-web",
    "build:kit": "turbo build -F @left-curve/applets-kit",
    "build:portal-app": "pnpm portal-app build:ios",
    "storybook": "pnpm -F applets-kit sb:dev",
    "portal-web": "pnpm -F portal-web",
    "portal-app": "pnpm -F portal-app",
    "dango": "pnpm -F dango",
    "foundation": "pnpm -F foundation",
    "grug": "pnpm -F grug",
    "kit": "pnpm -F applets-kit",
    "bump": "pnpm -r 'bump'"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/node": "catalog:",
    "tsup": "^8.3.0",
    "turbo": "^2.0.11",
    "typedoc": "^0.26.5",
    "typescript": "catalog:"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "typescript",
        "tsup",
        "@biomejs/biome"
      ]
    }
  }
}
