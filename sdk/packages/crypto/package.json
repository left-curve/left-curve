{
  "name": "@leftcurve/crypto",
  "version": "0.1.0",
  "private": true,
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "typings": "./build/index.d.ts",
  "sideEffects": false,
  "files": [
    "build",
    "src",
    "!**/*.spec.ts",
    "!typedoc.json",
    "!tsup.config.ts"
  ],
  "scripts": {
    "ci": "pnpm lint",
    "clean": "rm -rf ./build && rm -rf node_modules",
    "clean:build": "rm -rf ./build",
    "lint": "pnpm biome check --write src",
    "lint:fix": "pnpm biome ci ./src",
    "test": "pnpm vitest run",
    "test:watch": "pnpm vitest",
    "pre-dev": "pnpm build",
    "dev": "pnpm tsup --watch --onSuccess 'tsup --dts-only --silent' --silent",
    "build": "pnpm tsup --clean"
  },
  "devDependencies": {
    "@leftcurve/config": "workspace:^",
    "@leftcurve/encoding": "workspace:^",
    "@leftcurve/types": "workspace:^",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@noble/curves": "^1.6.0",
    "@noble/hashes": "^1.4.0",
    "@scure/bip32": "^1.4.0",
    "@scure/bip39": "^1.3.0",
    "cbor-x": "^1.6.0"
  }
}
