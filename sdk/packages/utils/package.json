{
  "name": "@leftcurve/utils",
  "version": "0.1.0",
  "private": true,
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "typings": "./build/index.d.ts",
  "sideEffects": false,
  "files": [
    "build",
    "src",
    "!**/*.spec.ts",
    "!typedoc.json",
    "!tsup.config.ts"
  ],
  "scripts": {
    "ci": "pnpm lint",
    "tsup": "tsup",
    "clean": "rm -rf ./build && rm -rf node_modules",
    "clean:build": "rm -rf ./build",
    "lint": "pnpm biome check --write src",
    "lint:fix": "pnpm biome ci ./src",
    "test": "pnpm vitest run",
    "test:watch": "pnpm vitest",
    "pre-dev": "NODE_ENV=development pnpm tsup --clean",
    "dev": "NODE_ENV=development pnpm tsup --watch --onSuccess 'tsup --dts-only --silent' --silent",
    "build": "NODE_ENV=production pnpm tsup --clean"
  },
  "devDependencies": {
    "@leftcurve/config": "workspace:^",
    "@leftcurve/types": "workspace:^",
    "vitest": "catalog:"
  },
  "dependencies": {
    "viem": "^2.21.34"
  }
}
