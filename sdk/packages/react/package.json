{
  "name": "@leftcurve/react",
  "version": "0.1.0",
  "scripts": {
    "ci": "pnpm lint",
    "clean": "rm -rf ./build && rm -rf node_modules",
    "clean:build": "rm -rf ./build",
    "lint": "pnpm biome check --write src",
    "lint:fix": "pnpm biome ci ./src",
    "pre-dev": "NODE_ENV=development pnpm tsup --clean",
    "dev": "NODE_ENV=development pnpm tsup --watch --onSuccess 'tsup --dts-only --silent' --silent",
    "build": "NODE_ENV=production pnpm tsup --clean"
  },
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "sideEffects": false,
  "files": [
    "build",
    "src",
    "!**/*.spec.ts"
  ],
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.mjs",
      "default": "./build/index.js"
    }
  },
  "dependencies": {
    "@leftcurve/connect-kit": "workspace:^",
    "@leftcurve/crypto": "workspace:^",
    "@leftcurve/encoding": "workspace:^",
    "@leftcurve/utils": "workspace:^",
    "use-sync-external-store": "^1.2.2"
  },
  "devDependencies": {
    "@leftcurve/config": "workspace:^",
    "@leftcurve/types": "workspace:^",
    "@tanstack/react-query": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@types/use-sync-external-store": "^0.0.6",
    "react": "catalog:"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5.0.0",
    "react": "^18",
    "react-dom": "^18"
  }
}
