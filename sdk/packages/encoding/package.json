{
  "name": "@left-curve/encoding",
  "version": "0.1.0",
  "private": true,
  "main": "./build/index.cjs",
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "typings": "./build/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "files": ["build", "src", "!**/*.spec.ts", "!typedoc.json", "!tsup.config.ts"],
  "scripts": {
    "ci": "pnpm lint",
    "clean": "rm -rf ./build && rm -rf node_modules",
    "clean:build": "rm -rf ./build",
    "lint": "pnpm biome check --write src",
    "lint:fix": "pnpm biome ci ./src",
    "test": "pnpm vitest run",
    "test:watch": "pnpm vitest",
    "pre-dev": "tsc",
    "dev": "tsc -w",
    "build": "pnpm tsup --clean"
  },
  "devDependencies": {
    "@left-curve/config": "workspace:^",
    "@left-curve/types": "workspace:^",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@left-curve/utils": "workspace:^",
    "superjson": "^2.2.1"
  }
}
