{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "noParameterAssign": "off",
        "useTemplate": "off"
      },
      "suspicious": {
        "noConfusingVoidType": "off",
        "noExplicitAny": "off"
      }
    }
  },
  "files": {
    "includes": ["**", "!**/build/**", "!**/package.json", "!**/*.test.ts", "!**/*.spec.ts"]
  },
  "overrides": [
    {
      "includes": ["**/sdk/**"],
      "linter": {
        "rules": {
          "correctness": {
            "useExhaustiveDependencies": "off",
            "noUnusedVariables": {
              "level": "warn",
              "options": {
                "ignoreRestSiblings": true
              }
            }
          },
          "suspicious": {
            "noTemplateCurlyInString": "off"
          },
          "performance": {
            "noDelete": "off"
          },
          "complexity": {
            "noForEach": "off"
          }
        }
      }
    },
    {
      "includes": ["**/ui/**"],
      "linter": {
        "rules": {
          "correctness": {
            "useExhaustiveDependencies": "off",
            "noUnusedVariables": {
              "level": "warn",
              "options": {
                "ignoreRestSiblings": true
              }
            }
          },
          "a11y": {
            "noStaticElementInteractions": "off",
            "noSvgWithoutTitle": "off",
            "useKeyWithClickEvents": "off"
          }
        }
      }
    }
  ]
}
