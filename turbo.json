{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "ci": {},
    "lint": {},
    "lint:fix": {},
    "clean": {
      "cache": false
    },
    "clean:build": {
      "cache": false
    },
    "test": {},
    "pre-dev": {
      "dependsOn": ["^pre-dev"],
      "outputs": [".next/**", "!.next/cache/**", "build/**"]
    },
    "dev": {
      "dependsOn": ["pre-dev"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "build/**"]
    }
  },
  "globalEnv": [
    "NEXT_PUBLIC_FULLPAGE_KEY",
    "CONFIG_ENVIRONMENT",
    "PUBLIC_WEBRTC_URI",
    "PUBLIC_SENTRY_DSN",
    "PUBLIC_FAUCET_URI",
    "SENTRY_ORG",
    "SENTRY_PROJECT",
    "SENTRY_AUTH_TOKEN"
  ]
}
